<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Local Theatre</title>
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Site.css")
    @Scripts.Render("~/bundles/modernizr")


</head>
<body>
    <div class="navbar navbar-fixed-top" style="background-color:white;border-bottom:solid;">
        <div class="container">
            <div class="navbar-header">
                <a href="/Home/Index">
                    <img src="/images/icon.png" alt="Local Theatre Logo" />
                </a>
            </div>
            <div>
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "link-color" })</li>
                    <li>@Html.ActionLink("Contact Us", "Contact", "Home", new { area = "" }, new { @class = "link-color" })</li>
                    <li>@Html.ActionLink("Blog", "Blog", "Post", new { area = "" }, new { @class = "link-color" })</li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li>
                            @Html.ActionLink("Manage Roles", "UserRoles", "Admin", new { area = "" }, new { @class = "link-color" })
                        </li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div>
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
